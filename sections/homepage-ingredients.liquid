{{ "section-homepage-ingredients.css" | asset_url | stylesheet_tag }}
  
<div class="row">
  <div class="col-6 col-s-9" >
    <h1 style="text-align: center; font-size: 50px;">Wellness in a can. Yes, it's that easy </h1>
    <div class="upk-featured-list-ingredients">
      {% for block in section.blocks %}
      {%- if block.type == "hp-ingredient" -%}
        <div class="upk-featured-list-content-ingredients" {{ block.shopify_attributes }}>
          <div style="margin-right: 13px;">
            {%- if block.settings.ingredient-image -%}
              {{ block.settings.ingredient-image | img_url | img_tag }}
            {%- else -%}
              {{ "image" | placeholder_svg_tag }}
            {%- endif -%}
          </div>
          <div>
            <h1 class="upk-featured-list-title-ingredients">{{ block.settings.heading }}</h1>
            <div style="margin-top: 10px;">{{ block.settings.ingredient-details }}</div>
          </div>
        </div>
        
      {%- endif -%}
      {% endfor %}
    </div>
    
  </div> 

  <div class="col-6 col-s-9"  id="button">
    <button class="btn-ingredients fifth-ingredients">Shop Now</button>
  </div>
</div>   


{% schema %}
{
  "name": "Homepage Ingredients",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    
  ],
  "blocks": [
    {
      "type": "hp-ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Ingredient Name",
          "default": "Ingredient Name"
        },
        {
          "type": "text",
          "id": "ingredient-details",
          "label": "Ingredient Details",
          "default": "Ingredient Details"
        },
        {
          "type": "image_picker",
          "id": "ingredient-image",
          "label": "Ingredient Image"
        }
      ]
    }
  ]
}
{% endschema %}
