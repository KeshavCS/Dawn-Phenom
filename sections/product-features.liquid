{{ 'section-product-features.css' | asset_url | stylesheet_tag }}

<section class="page-width">
  <div class="product-features product grid grid--1-col grid--2-col-tablet">
    <div class="benefits grid__item">
      <h3>Benefits</h3>
      <ul class="benefit-list">
        {%- for block in section.blocks -%}
          {%- if block.type == "benefit" -%}
            <li class="benefit-item" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    </div>

    <div class="ingredients grid__item">
      <h3>Ingredients</h3>
      <ul class="ingredient-list">
        {%- for block in section.blocks -%}
          {%- if block.type == "ingredient" -%}
            <li class="ingredient-item" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Product Features",
  "tag": "section",
  "class": "product-section spaced-section",
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Benefit",
          "default": "Benefit Here"
        }
      ]
    },
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Ingredient",
          "default": "Ingredient Here"
        }
      ]
    }
  ]
}
{% endschema %}