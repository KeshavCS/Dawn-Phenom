  {{ "section-homepage-features.css" | asset_url | stylesheet_tag }}

<div id="containers" id="layout12" >
  <div class="layout">
        <div class="row" id="features-row">
          
        <div class="flex-right">  
          <div id="home-feature">
            <h1>{{ section.settings.section-heading }}</h1>
            <h3 id="heading3">{{ section.settings.section-text }}</h3>
         </div>
        </div> 
<div class="flex-left">

    {%- for block in section.blocks -%}
    {%- if block.type == "feature-item" -%}
        <div  id="home-feature" {{ block.shopify_attributes }}>
            <div id="etxt">
                <div> 
                    <p id="text">
                        {%- if block.settings.feature-image -%}
                        <img src="{{ block.settings.feature-image | img_url: '37x'}}">
                        {%- else -%}
                        <img src="{{ 'juice.png' | asset_img_url: '37x'}}">
                        {%- endif -%}
                        <span id="demotxt">{{ block.settings.text }}</span>
                    </p>
                </div>
            </div>
        </div>
    {%- endif -%}
    {%- endfor -%}
 </div>


</div>
<a href="{{ section.settings.button-link }}">
  <button class="button-features_section">{{ section.settings.button-text }}</button>
</a>
</div>
</div>

{% schema %}
{
  "name": "Homepage Features",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "textarea",
      "id": "section-heading",
      "label": "Section Heading",
      "default": "Not just<br>Better.<br>Phenomenal"
    },
    {
      "type": "textarea",
      "id": "section-text",
      "label": "Section Text",
      "default": "We have taken<br> sparkling water and made it<br> truly functional."
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button-link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "blocks": [
    {
      "type": "feature-item",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "feature-image",
          "label": "Feature Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatem."
        }
      ]
    }
  ]
}
{% endschema %}
