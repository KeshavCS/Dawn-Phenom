{{ "section-signup-offer.css" | asset_url | stylesheet_tag }}
<div class='wrapper'>
  <h1 id="signupofferh1">{{ section.settings.section-heading }}</h1>
  <div id="signofferdiv">
  <div class='rowss'>
    
    <div class='columnss column1232'>

            <button class="btn0"> <i class="fa fa-envelope" style="font-size:20px;">&nbsp;Join Now</i></button>
    </div>
    <div class='columnss column232323'>
      
        <h2>{{ section.settings.section-text }}</h2>
      
    </div>
  </div>
  </div>
  <h2 style="text-align: center; margin-top: 40px;">{{ section.settings.referral-text }}</h2>
</div>
{% schema %}
{
  "name": "Sign Up Offer",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "text",
      "id": "section-heading",
      "label": "Section Heading",
      "default": "Section Heading Here"
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Button Text",
      "default": "Join Now"
    },
    {
      "type": "text",
      "id": "section-text",
      "label": "Section Text",
      "default": "Section Text Here"
    },
    {
      "type": "text",
      "id": "referral-text",
      "label": "Referral Text",
      "default": "Referral Text Here"
    }
  ]
}
{% endschema %}