{{ "section-homepage-products.css" | asset_url | stylesheet_tag }}

<div class="row">
	<div id="homepage_products">

		{%- for block in section.blocks -%}
    {%- if block.type == "product-card" -%}
			<div class="column {{ block.shopify_attributes }}">
				<div style="text-align: center;">
					<div class="card_product">
						{%- if block.settings.ingredient-image -%}
            {{ block.settings.ingredient-image | img_url | img_tag }}
            {%- else -%}
              {{ "product-1" | placeholder_svg_tag }}
            {%- endif -%}
					</div>
					<p>{{ block.settings.product-text }}</p>
					<button class="button">{{ block.settings.heading }}</button>
				</div>
			</div>
    {%- endif -%}
		{%- endfor -%}

	</div>

</div>

{% schema %}
{
  "name": "Homepage Products",
  "tag": "section",
  "class": "spaced-section",
  "blocks": [
    {
      "type": "product-card",
      "name": "Product Card",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "image_picker",
          "id": "product-image",
          "label": "Product Image"
        },
        {
          "type": "textarea",
          "id": "product-text",
          "label": "Product Text",
          "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Distinctio quae perferendis, corporis",
          "placeholder": "Few Lines about the product"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Button Text",
          "default": "Get Product"
        }
      ]
    }
  ]
}
{% endschema %}